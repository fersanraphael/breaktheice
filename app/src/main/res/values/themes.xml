<resources>

    <!-- Theme -->
    <style name="Theme.Appbreaktheice" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorContainer">@color/lightGrey</item>
        <item name="android:statusBarColor">@color/primaryVariant</item>
    </style>

    <style name="Theme.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Theme.Dialog" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="dialogCornerRadius">@dimen/dimen_12dp</item>
        <item name="theme">@style/Theme.Appbreaktheice</item>
    </style>

    <!-- Widget -->
    <style name="Widget.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="contentInsetStartWithNavigation">@dimen/dimen_0dp</item>
        <item name="popupTheme">@style/Theme.PopupOverlay</item>
        <item name="title">@string/label_app_bar</item>
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">@style/FontTitle.XL</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Widget.ExposedDropdownMenu.FilledBox" parent="Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="android:background">@drawable/background_card_view</item>
        <item name="errorEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/FontText.XS</item>
        <item name="counterTextAppearance">@style/FontText.XS</item>
        <item name="hintTextAppearance">@style/FontLabel.SM</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_12dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_12dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_12dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_12dp</item>
        <item name="boxBackgroundColor">@color/lightGrey</item>
        <item name="boxStrokeColor">@color/lightGrey</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="boxStrokeWidth">@dimen/dimen_0dp</item>
        <item name="boxStrokeWidthFocused">@dimen/dimen_0dp</item>
    </style>

    <style name="Widget.TextInputLayout.FilledBox" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="android:background">@drawable/background_card_view</item>
        <item name="errorEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/FontText.XS</item>
        <item name="counterTextAppearance">@style/FontText.XS</item>
        <item name="hintTextAppearance">@style/FontLabel.SM</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_12dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_12dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_12dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_12dp</item>
        <item name="boxBackgroundColor">@color/lightGrey</item>
        <item name="boxStrokeColor">@color/lightGrey</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="boxStrokeWidth">@dimen/dimen_0dp</item>
        <item name="boxStrokeWidthFocused">@dimen/dimen_0dp</item>
    </style>

    <style name="Widget.Button" parent="Widget.Material3.Button">
        <item name="android:stateListAnimator">@animator/state_scaled</item>
        <item name="android:textAppearance">@style/FontLabel.MD</item>
        <item name="android:textColor">@color/onSecondary</item>
        <item name="cornerRadius">@dimen/dimen_12dp</item>
        <item name="backgroundTint">@color/secondary_stated</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="Widget.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:stateListAnimator">@animator/state_scaled</item>
        <item name="android:textAppearance">@style/FontLabel.MD</item>
        <item name="cornerRadius">@dimen/dimen_12dp</item>
        <item name="backgroundTint">@color/onPrimary</item>
        <item name="strokeColor">@color/primary_stated</item>
        <item name="strokeWidth">@dimen/dimen_3dp</item>
    </style>

    <style name="Widget.FloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="android:textAppearance">@style/FontLabel.MD</item>
        <item name="android:textColor">@color/onSecondary</item>
        <item name="backgroundTint">@color/secondary_stated</item>
        <item name="cornerRadius">@dimen/dimen_12dp</item>
        <item name="fabSize">normal</item>
        <item name="iconTint">@color/onSecondary</item>
        <item name="layout_behavior">
            com.google.android.material.behavior.HideBottomViewOnScrollBehavior
        </item>
        <item name="maxImageSize">@dimen/dimen_32dp</item>
        <item name="rippleColor">@null</item>
        <item name="shapeAppearanceOverlay">@style/Widget.FloatingActionButton.Overlay</item>
        <item name="tint">@color/red</item>
        <item name="useCompatPadding">true</item>
    </style>

    <style name="Widget.FloatingActionButton.Overlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dimen_12dp</item>
    </style>

    <style name="Widget.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_stated</item>
        <item name="trackTint">@color/switch_track_stated</item>
    </style>

    <!-- Font  -->
    <style name="FontLabel">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="FontLabel.SM" parent="FontLabel">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FontLabel.MD" parent="FontLabel">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="FontText.XS" parent="FontText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FontText.SM" parent="FontText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FontText.MD" parent="FontText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontTitle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="FontTitle.XL" parent="FontTitle">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
