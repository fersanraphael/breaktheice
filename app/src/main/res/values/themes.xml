<resources>

    <!-- Theme -->
    <style name="Theme.Appbreaktheice" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimaryContainer</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/colorOnSecondaryContainer</item>
        <item name="colorTertiary">@color/colorTertiary</item>
        <item name="colorOnTertiary">@color/colorOnTertiary</item>
        <item name="colorTertiaryContainer">@color/colorTertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/colorOnTertiaryContainer</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorErrorContainer">@color/colorErrorContainer</item>
        <item name="colorOnErrorContainer">@color/colorOnErrorContainer</item>
        <item name="background">@color/background</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>
        <item name="colorOutline">@color/colorOutline</item>
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.LabelSmall</item>
    </style>

    <style name="Theme.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Theme.Dialog" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="dialogCornerRadius">@dimen/dimen_12dp</item>
        <item name="theme">@style/Theme.Appbreaktheice</item>
    </style>

    <!-- Widget -->
    <style name="Widget.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="contentInsetStartWithNavigation">@dimen/dimen_0dp</item>
        <item name="popupTheme">@style/Theme.PopupOverlay</item>
        <item name="title">@string/label_app_bar</item>
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">@style/TextAppearance.TitleLarge</item>
    </style>

    <style name="Widget.ExposedDropdownMenu.OutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/TextAppearance.LabelSmall</item>
        <item name="counterTextAppearance">@style/TextAppearance.LabelSmall</item>
        <item name="hintTextAppearance">@style/TextAppearance.LabelMedium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_12dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_12dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_12dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_12dp</item>
        <item name="boxStrokeWidth">@dimen/dimen_2dp</item>
        <item name="boxStrokeWidthFocused">@dimen/dimen_2dp</item>
    </style>

    <style name="Widget.TextInputLayout.OutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/TextAppearance.LabelSmall</item>
        <item name="counterTextAppearance">@style/TextAppearance.LabelSmall</item>
        <item name="hintTextAppearance">@style/TextAppearance.LabelMedium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_12dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_12dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_12dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_12dp</item>
        <item name="boxStrokeWidth">@dimen/dimen_2dp</item>
        <item name="boxStrokeWidthFocused">@dimen/dimen_2dp</item>
    </style>

    <style name="Widget.Button" parent="Widget.Material3.Button">
        <item name="android:stateListAnimator">@animator/state_scaled</item>
        <item name="android:textAppearance">@style/TextAppearance.LabelLarge</item>
        <item name="cornerRadius">@dimen/dimen_12dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="Widget.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:stateListAnimator">@animator/state_scaled</item>
        <item name="android:textAppearance">@style/TextAppearance.LabelLarge</item>
        <item name="cornerRadius">@dimen/dimen_12dp</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="strokeWidth">@dimen/dimen_2dp</item>
    </style>

    <style name="Widget.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/dimen_12dp</item>
        <item name="cardElevation">@dimen/dimen_16dp</item>
        <item name="contentPadding">@dimen/dimen_16dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="Widget.FloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="android:textAppearance">@style/TextAppearance.LabelLarge</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/dimen_12dp</item>
        <item name="fabSize">normal</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="layout_behavior">
            com.google.android.material.behavior.HideBottomViewOnScrollBehavior
        </item>
        <item name="maxImageSize">@dimen/dimen_32dp</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">@style/Widget.FloatingActionButton.Overlay</item>
        <item name="useCompatPadding">true</item>
    </style>

    <style name="Widget.FloatingActionButton.Overlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dimen_12dp</item>
    </style>

    <!-- Text Appearance -->
    <style name="TextAppearance.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

</resources>
